<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".LearnNumberActivity">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="50dp"
        android:scrollbars="none"
        android:scrollbarSize="0dp"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbarStyle="insideOverlay"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:id="@+id/number1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bawah1"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/number2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bawah2"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/number3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bawah3"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/number4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bawah4"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/number5"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bawah5"
                android:layout_gravity="center"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/number6"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bawah6"
                android:layout_gravity="center"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/number7"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bawah7"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/number8"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bawah8"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/number9"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bawah9"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"/>
            <ImageButton
                android:id="@+id/number10"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bawah10"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"/>
        </LinearLayout>
    </HorizontalScrollView>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/learn1"
        android:id="@+id/popup"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/back"
        android:id="@+id/back"/>
    <ImageButton
        android:layout_width="70dp"
        android:id="@+id/home"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/home"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"/>
</RelativeLayout>